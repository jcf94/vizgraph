{
  "name": "vizgraph",
  "version": "0.0.8",
  "description": "A simple tool for Using Graphviz.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder -lw --publish always",
    "win": "electron-builder -w",
    "linux": "electron-builder -l",
    "mac": "electron-builder -m"
  },
  "author": {
    "name": "Jcf94",
    "email": "jcf94@outlook.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jcf94/vizgraph.git"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-builder": "^20.38.4"
  },
  "dependencies": {
    "ace-builds": "^1.4.2",
    "electron-settings": "^3.2.0",
    "split.js": "^1.5.10",
    "svg-pan-zoom": "^3.6.0",
    "viz.js": "^2.1.2"
  },
  "build": {
    "appId": "com.jcf94.vizgraph",
    "productName": "vizgraph",
    "extraFiles": [
      "template/*",
      "src/img/ico.png"
    ],
    "win": {
      "target": {
        "target": "portable",
        "arch": [
          "ia32",
          "x64"
        ]
      },
      "publisherName": "Jcf94",
      "icon": "src/img/ico.ico"
    },
    "linux": {
      "target": {
        "target": "AppImage",
        "arch": [
          "ia32",
          "x64"
        ]
      }
    },
    "mac": {
      "icon": "src/img/ico.png"
    }
  }
}
